{
  "name": "andela-studio-issue-er",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/web",
    "precommit": "lint-staged",
    "lint": "xo",
    "deploy": "now && now alias"
  },
  "xo": {
    "ignores": [
      "node_modules/**/*",
      ".env",
      ".env.sample"
    ],
    "extends": "prettier",
    "rules": {
      "unicorn/no-process-exit": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "dependencies": {
    "@slack/client": "^3.14.2",
    "airtable": "^0.5.0",
    "async": "^2.6.0",
    "async-retry": "^1.1.4",
    "await-sleep": "^0.0.1",
    "cron": "^1.3.0",
    "dateformat": "^3.0.2",
    "dotenv": "^5.0.1",
    "github-api": "^3.0.0",
    "googleapis": "^28.0.1",
    "graphql-request": "^1.3.6",
    "joi": "^13.1.2",
    "jsonfile": "^4.0.0",
    "micro": "^9.1.4",
    "micro-cors": "^0.0.4",
    "moment": "^2.21.0",
    "node-fetch": "^2.0.0",
    "query-string": "^5.1.0",
    "then-sleep": "^1.0.1",
    "verify-github-webhook": "^1.0.1"
  },
  "devDependencies": {
    "dotenv-safe": "^5.0.1",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "micro-dev": "^2.1.0",
    "nodemon": "^1.17.3",
    "prettier": "^1.7.3",
    "xo": "^0.18.2"
  }
}
