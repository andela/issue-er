{
  "name": "as-gh-webhook",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "micro",
    "precommit": "lint-staged",
    "lint": "xo",
    "predeploy": "cat .env | while read line; do export $line; done",
    "deploy": "now -e NODE_ENV=production -e GH_WEBHOOK_SECRET -e GH_TOKEN -e GH_OWNER -e GH_REPOSITORY -e AIRTABLE_API_KEY -e AIRTABLE_BASE -e AIRTABLE_VIEW_ENDPOINT && now alias"
  },
  "now": {
    "alias": "as-gh-webhook"
  },
  "xo": {
    "ignores": [
      "node_modules/**/*",
      ".env",
      ".env.sample"
    ],
    "extends": "prettier",
    "rules": {
      "unicorn/no-process-exit": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "dependencies": {
    "airtable": "^0.5.0",
    "dateformat": "^3.0.2",
    "dotenv-safe": "^4.0.4",
    "github-api": "^3.0.0",
    "graphql-request": "^1.3.6",
    "micro": "^9.0.0",
    "then-sleep": "^1.0.1",
    "verify-github-webhook": "^1.0.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "prettier": "^1.7.3",
    "xo": "^0.18.2"
  }
}
